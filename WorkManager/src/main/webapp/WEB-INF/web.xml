<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">

	<!-- =============================== sample ▼▼▼ =============================== -->
	<servlet>
		<servlet-name>dispatcherServlet_re</servlet-name>
		<servlet-class>jp.co.ojt.servlet.TaskRedirectServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>dispatcherServlet_re</servlet-name>
		<url-pattern>/TaskRedirectServlet</url-pattern>
	</servlet-mapping>

	<!-- =============================== sample ▲▲▲ =============================== -->

	<!-- 認証範囲 -->
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Authentication of FormAuth</web-resource-name>
			<url-pattern>/WEB-INF/jsp/user/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
		</auth-constraint>
	</security-constraint>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Authentication of FormAuth</web-resource-name>
			<url-pattern>/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>All user permission</web-resource-name>
			<url-pattern>/RegisterForm/*</url-pattern>
			<url-pattern>/resources/*</url-pattern>
			<url-pattern>/Error/*</url-pattern>
		</web-resource-collection>
	</security-constraint>

	<security-role>
		<role-name>admin</role-name>
	</security-role>

	<!-- エラー定義 -->
	<error-page>
		<exception-type>javax.servlet.ServletException</exception-type>
		<location>/WEB-INF/jsp/error/error.jsp</location>
	</error-page>
	<error-page>
		<exception-type>jp.co.ojt.common.exception.SystemException</exception-type>
		<location>/WEB-INF/jsp/error/systemError.jsp</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/jsp/error/404.jsp</location>
	</error-page>

	<!-- form認証設定 -->
	<login-config>
		<auth-method>FORM</auth-method>
		<form-login-config>
			<form-login-page>/WEB-INF/login.jsp</form-login-page>
			<form-error-page>/WEB-INF/login.jsp?error=true</form-error-page>
		</form-login-config>
	</login-config>


	<resource-ref>
		<description>postgreSQL Datasource example</description>
		<res-ref-name>jdbc/postgres</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

</web-app>
